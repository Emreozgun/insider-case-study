{
  "name": "nodejs-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "version": "update-changelog && git add CHANGELOG.md",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "docker:build": "docker-compose --project-name=product-app --file=docker/docker-compose.development.yml build",
    "docker:up": "docker-compose --project-name=product-app --file=docker/docker-compose.development.yml up",
    "docker:down": "docker-compose --project-name=product-app --file=docker/docker-compose.development.yml down",
    "docker:rm": "docker-compose --project-name=product-app --file=docker/docker-compose.development.yml down -v",
    "docker:build-test": "docker-compose --project-name=product-app-test --file=docker/docker-compose.test.yml down -v && docker-compose --project-name=product-app-test --file=docker/docker-compose.test.yml build && docker-compose --project-name=product-app-test --file=docker/docker-compose.test.yml up",
    "serve:development": "nodemon --legacy-watch ./dist/index.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "joi": "^17.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "6.5.0",
    "swagger-jsdoc": "^6.0.2",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1",
    "yesql": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^29.7.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.3.4",
    "update-changelog": "^1.0.2"
  }
}
